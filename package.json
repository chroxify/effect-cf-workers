{
	"name": "acme",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome lint .",
		"format": "biome format .",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"check-types": "turbo run check-types",
		"bump-deps": "find . -name package.json -not -path '*/node_modules/*' -execdir ncu -u \\;",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"npm-check-updates": "^18.1.0",
		"turbo": "^2.5.6",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.21",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": ["pnpm format-and-lint:fix"]
	}
}
